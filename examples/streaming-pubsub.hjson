{
  // Use this setting for streaming pipeline
  // Ref: https://github.com/kouzoh/mercari-segmentation-jp/discussions/365#discussioncomment-528168
  "settings": {
    "streaming": true
  },

  "sources": [
    {
      "name": "pubsubInput",
      "module": "pubsub",
      "parameters": {
        "subscription": "projects/myproject/subscriptions/mysubscription",
        "format": "json",
        // This eventTimeField is currently mandatory requirment
        // Ref: https://github.com/kouzoh/mercari-segmentation-jp/discussions/365#discussioncomment-527330
        "eventTimeField": "EventTimestamp"
      },
      "schema": {
        "fields": [
          { "name": "url", "type": "string"},
          { "name": "review", "type": "string"},
          { "name": "EventTimestamp", "type": "timestamp", "mode": "nullable" }
        ]
      }
    }
  ],
  "transforms": [
    {
      "name": "beamsqlTransform",
      "module": "beamsql",
      "inputs": [
        "pubsubInput"
      ],
      "parameters": {
        "sql": "SELECT * FROM pubsubInput"
      }
    }
  ],
  "sinks": [
    {
      "name": "pubsubOutput",
      "module": "pubsub",
      "input": "beamsqlTransform",
      "parameters": {
        "topic": "projects/myproject/topics/mytopic",
        "format": "json"
      }
    }
  ]
}
